{
    "elements": [
        {
            "type": "RowLayout",
            "items": [
                {
                    "type": "Label",
                    "caption": "\nControme Heating Control\n ",
                    "link": false,
                    "bold": true
                }
            ]
        },
        {
            "type": "Label",
            "caption": "Symcon Modul zur lokalen Steuerung und Überwachung von Controme-Heizsystemen. Automatisches Anlegen von Räumen, Sensoren, Ist-/Soll-Temperaturen, Luftfeuchte und Betriebsart. Unterstützt Lesen und Schreiben über die Controme API. Vollständig in IPS integrierbar mit Timer und Variablenprofilen."
        },
        {
            "type": "ExpansionPanel",
            "caption": "Connection ...",
            "items": [
                {
                    "type": "RowLayout",
                    "items": [
                        {
                            "type": "ValidationTextBox",
                            "name": "User",
                            "caption": "Username (Super-Admin in der Controme App)",
                            "width": "300px"
                        },
                        {
                            "type": "PasswordTextBox",
                            "caption": "Password",
                            "enabled": true,
                            "name": "Password",
                            "onChange": "",
                            "validate": "",
                            "value": "",
                            "visible": true,
                            "width": "300px"
                        }
                    ]
                },
                {
                    "type": "ValidationTextBox",
                    "name": "IPAddress",
                    "caption": "Device IP (local, e.g. 192.168.1.101):",
                    "width": "300px"
                }
            ]
        },

        {
            "type": "ExpansionPanel",
            "caption": "Visualisation ...",
            "items": [
                {
                    "type": "RowLayout",
                    "items": [
                        {
                            "type": "SelectColor",
                            "name": "VisuOnColor",
                            "caption": "Tile background color (online):",
                            "allowTransparent": true
                        },
                        {
                            "type": "SelectColor",
                            "name": "VisuOffColor",
                            "caption": "Tile background color (offline):",
                            "allowTransparent": true
                        }
                    ]
                },
                {
                    "type": "CheckBox",
                    "name": "VisuNaviBar",
                    "caption": "Show navigation bar (Prev, Back, Next)?"
                },
                {
                    "type": "CheckBox",
                    "name": "VisuActionBar",
                    "caption": "Show action bar (Clear pages, Reload pages, Sync, Reboot)?"
                }
            ]
        },
        {
            "type": "ExpansionPanel",
            "caption": "Advanced settings ...",
            "items": [
                {
                    "type": "CheckBox",
                    "name": "Enable XYZ",
                    "caption": "Automatically do something!"
                }
            ]
        }
    ],
    "actions": [
        {
            "type": "ExpansionPanel",
            "caption": "Execute action ...",
            "expanded": true,
            "items": [
                {
                    "type": "RowLayout",
                    "items": [
                        {
                            "type": "Button",
                            "caption": "Update data",
                            "onClick": "IPS_RequestAction($id,'UpdateData',true);",
                            "enabled": true
                        }
                    ]
                }
            ]
        },
        {
            "type": "ExpansionPanel",
            "caption": "Source code, donation and licence ...",
            "items": [
                {
                    "type": "Label",
                    "caption": "The software is free of charge for non-commercial use, I would appreciate a donation if you like the module.",
                    "bold": true
                },
                {
                    "type": "RowLayout",
                    "items": [
                        {
                            "type": "Image",
                            "image": "data:image/svg+xml;base64,",
                            "onClick": "echo 'https://github.com/AllardLiao/ContromeHeatingControl';"
                        }
                    ]
                }
            ]
        },
        {
            "name": "EchoPopup",
            "type": "PopupAlert",
            "visible": false,
            "popup": {
                "items": [
                    {
                        "type": "Label",
                        "name": "EchoMessage",
                        "caption": ""
                    }
                ]
            }
        },
        {
            "name": "EchoText",
            "type": "PopupAlert",
            "visible": false,
            "popup": {
                "items": [
                    {
                        "type": "ValidationTextBox",
                        "name": "JSONL",
                        "caption": "Definition:",
                        "multiline": true,
                        "width": "900px"
                    }
                ]
            }
        }
    ],
    "status": [
        {
            "code": 201,
            "icon": "inactive",
            "caption": "Object linking incorrect"
        }
    ]
}
